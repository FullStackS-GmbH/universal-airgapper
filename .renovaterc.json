
{
  "extends": [
    "config:recommended",
    ":semanticCommits",
    ":semanticCommitTypeAll(fix)",
    ":semanticCommitScope(deps)"
  ],
  "labels": [
    "dependencies"
  ],
  "packageRules": [
    {
      "automerge": false,
      "description": "No Automerge all updates except major versions",
      "matchUpdateTypes": [
        "patch",
        "pin",
        "digest",
        "minor"
      ]
    },
    {
      "automerge": false,
      "description": "Group minor and patch updates into a single PR",
      "groupName": "dependencies",
      "matchManagers": [
        "terraform",
        "dockerfile"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ]
    },
    {
      "matchUpdateTypes": ["major"],
      "draftPR": "true",
      "description": "Mark major update MRs as draft"
    }
  ],
  "autoApprove": true,
  "prConcurrentLimit": 2,
  "separateMinorPatch": true,
  "timezone": "Europe/Berlin"
}